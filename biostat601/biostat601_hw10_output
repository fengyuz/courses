> n <- 1e6
> 
> # Problem 3
> y <- runif(n,0,1)
> x <- runif(n,-y,y)
> print(cor(x,y))
[1] 0.0005870384
> 
> # Problem 6
> x <- rexp(n,2)
> y <- rexp(n,3)
> y <- y[y > x]
> mean(y)
[1] 0.534335
> 8/15
[1] 0.5333333
